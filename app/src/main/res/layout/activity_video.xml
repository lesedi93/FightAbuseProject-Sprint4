<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.irinnovative.onepagesigninsignup.activity.TestomoniesActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="profile"
            android:scaleType="centerCrop"
            android:src="@drawable/untitled"
            android:layout_marginBottom="5dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="BE INSPIRED WITH JUST ONE CLICK"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="14dp">

            <TableRow>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="loveHurt"
                    android:src="@drawable/ic_videocam" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="removed"
                    android:src="@drawable/ic_videocam" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="who"
                    android:src="@drawable/ic_videocam" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Love Hurts"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="ReMoved"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Who are you"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff" />
            </TableRow>


            <TableRow>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="leave"
                    android:src="@drawable/ic_videocam" />

                <ImageView
                    android:id="@+id/communities"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="rock"
                    android:src="@drawable/ic_videocam" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="love"
                    android:src="@drawable/ic_videocam" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Leave Now"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Rock Bottom"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Self Love"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff" />
            </TableRow>

            <TableRow>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="inspired"
                    android:src="@drawable/ic_videocam" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="dream"
                    android:src="@drawable/ic_videocam" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick=""
                    android:src="@drawable/ic_videocam" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Be Inspired"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Your Dream"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="That's It!"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff" />
            </TableRow>









        </TableLayout>

    </LinearLayout>

</ScrollView>
