<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:background="#FEFEFE"
    tools:context="com.irinnovative.onepagesigninsignup.activity.MediaActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/untitled"
            android:layout_marginBottom="50dp"/>



        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <TableRow>

        <ImageView
            android:id="@+id/sosButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#0065A6"
            android:onClick="movies"
            android:src="@drawable/ic_local_movies" />





    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Music Videos"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000">

        </TextView>

    </TableRow>


    <TableRow>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:background="#70BEDF"
            android:onClick="audio"
            android:src="@drawable/ic_import_contacts_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:background="#965FA6"
            android:onClick="video"
            android:src="@drawable/ic_videocam" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="BOOKS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000">

        </TextView>

        <TextView

            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Other videos"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000" />
    </TableRow>

    </TableLayout>

</LinearLayout>

</LinearLayout>