<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.irinnovative.onepagesigninsignup.activity.SupportGroups">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:onClick="profile"
            android:scaleType="centerCrop"
            android:src="@drawable/untitled" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingBottom="14dp">

            <TableRow>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="media"
                    android:src="@drawable/ic_camera" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="events"
                    android:src="@drawable/ic_today" />


            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="Media House"
                    android:textAlignment="center"
                    android:textColor="#fff">

                </TextView>


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="Events"
                    android:textAlignment="center"

                    android:textColor="#fff" />
            </TableRow>


            <TableRow>


                <ImageView
                    android:id="@+id/communities"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:onClick="learn"
                    android:src="@drawable/ic_people" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:onClick="support"
                    android:src="@drawable/ic_local" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Chat"
                    android:textAlignment="center"

                    android:textColor="#fff">

                </TextView>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Testimonies"
                    android:textAlignment="center"
                    android:textColor="#fff" />
            </TableRow>


        </TableLayout>

    </LinearLayout>

</LinearLayout>
