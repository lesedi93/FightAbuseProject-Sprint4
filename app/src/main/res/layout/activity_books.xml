<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.irinnovative.onepagesigninsignup.activity.TestomoniesActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="profile"
            android:scaleType="centerCrop"
            android:src="@drawable/untitled"
            android:layout_marginBottom="5dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="BE EMPOWERED WITH JUST ONE CLICK"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="14dp">

            <TableRow>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="power"
                    android:src="@drawable/ic_import_contacts_black_24dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="comfort"
                    android:src="@drawable/ic_import_contacts_black_24dp" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="ann"
                    android:src="@drawable/ic_import_contacts_black_24dp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Power of "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Comfort Zone"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Ann"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff" />
            </TableRow>


            <TableRow>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="happy"
                    android:src="@drawable/ic_import_contacts_black_24dp" />

                <ImageView
                    android:id="@+id/communities"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="secret"
                    android:src="@drawable/ic_import_contacts_black_24dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="rich"
                    android:src="@drawable/ic_import_contacts_black_24dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="be happy"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="The secret"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff">

                </TextView>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Think and Grow"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff" />
            </TableRow>






        </TableLayout>

    </LinearLayout>

</ScrollView>
